<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoogleActivity" >

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sign_in_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/google_logged_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/google_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <Button
            android:id="@+id/google_sign_out_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/disconnect_google" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fb_logged_in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/fb_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <Button
            android:id="@+id/fb_sign_out_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/disconnect_fb" />
    </LinearLayout>

    <com.facebook.widget.LoginButton
        android:id="@+id/fb_sign_in_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>